# Notification email address (where alerts are sent)
NOTIFY_EMAIL=you@example.com

# SMTP settings (for sending email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@gmail.com
SMTP_PASS=your-app-password

# Twilio settings (for sending SMS alerts)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+15551234567
NOTIFY_SMS=+15559876543

# Session secret (REQUIRED in production; auto-generated in development)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# Scheduler settings
CHECK_INTERVAL_CRON=*/5 * * * *
COOLDOWN_MINUTES=60
