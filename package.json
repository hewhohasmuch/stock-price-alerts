{
  "name": "stock-price-alerts",
  "version": "1.0.0",
  "description": "CLI tool that monitors stock prices and sends email/SMS alerts when prices cross user-defined thresholds",
  "type": "module",
  "scripts": {
    "start": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx src/scheduler.ts",
    "cli": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx src/cli.ts",
    "web": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx src/server.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "commander": "^12.1.0",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "express-session": "^1.19.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pg": "^8.18.0",
    "tsx": "^4.19.2",
    "twilio": "^5.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.16.0",
    "typescript": "^5.7.3"
  }
}
